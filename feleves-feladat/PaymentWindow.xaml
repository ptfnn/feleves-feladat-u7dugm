<Window x:Class="feleves_feladat.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:feleves_feladat"
        mc:Ignorable="d"
        Title="PaymentWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox Text="Name" FontSize="24" Background="Beige" Margin="10 10 10 0" />
            <TextBox  x:Name="Name" Height="35" Margin="10 10 10 10" />
            <TextBox Text="Card Number" FontSize="24" Background="Beige" Margin="10 10 10 0" />
            <TextBox  x:Name="CardNumber" Height="35" Margin="10 10 10 10" />
            <TextBox Text="PIN code" FontSize="24" Background="Beige" Margin="10 10 10 0" />
            <PasswordBox  Height="35" Margin="10 10 10 10" x:Name="PINCode" />
            <Button Content="Fizetek" Background="Peru" FontWeight="ExtraBold" FontSize="24" Margin="10 50 10 10" Click="OpenSuccesWindow" />
        </StackPanel>
    </Grid>
</Window>
